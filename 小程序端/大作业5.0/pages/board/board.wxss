/* pages/list/list.wxss */
.page {
  position: relative;
  background-color: rgb(255, 117, 152);
}
.lists {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.list-i {
  padding: 18rpx 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 210rpx;
  background: #e0f6ff;
  border-bottom: 3px solid #fff;
}
.content {
  padding: 0 28rpx;
  height: 118rpx;
  line-height: 120rpx;
  border-bottom: 1px solid skyblue;
}
.time {
  padding: 0 30rpx;
  line-height: 88rpx;
  color: #88f;
}
.add {
  position: absolute;
  right: 58rpx;
  bottom: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  background: #b3fbdb;
  border: 1px solid #888;
  border-radius: 50%;
}
.add image {
  width: 48rpx;
  height: 48rpx;
}
.delete{
    height: 110rpx;width: 70px;
    line-height: 110rpx;

    font-size: 14px;
    text-align: center;
   
    color: orangered;
    position: absolute;top: 0.5;right: 0;

}
.delete-text{
   
   
    border: 2px solid #bbb;
    padding: 10px 5px;
    border-radius: 50px;
    background: white;
    
}

